---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="w-full h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen w-full bg-gray-50 m-0">
    <header class="bg-blue-600 text-white shadow-md">
      <nav class="mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold">UCLA Blog</a>
          <div class="space-x-4">
            <a href="/" class="hover:text-blue-200">Home</a>
            <a href="/posts" class="hover:text-blue-200">posts</a>
            <a href="/about" class="hover:text-blue-200">About</a>
          </div>
        </div>
      </nav>
    </header>
    <main class="w-full">
      <slot />
    </main>
    <footer class="bg-blue-600 text-white py-6 mt-auto">
      <div class="mx-auto px-4 text-center">
        <p>&copy; 2024 UCLA Blog. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
