---
import { marked } from "marked";

interface Props {
  content: string;
}

const { content } = Astro.props;
---

<div class="markdown-content">
  <Fragment set:html={marked.parse(content)} />
</div>

<style>
  @import "tailwindcss";
  .markdown-content {
    @apply max-w-none;
  }

  .markdown-content h1 {
    @apply text-3xl font-bold mb-4 mt-8 first:mt-0;
  }

  .markdown-content h2 {
    @apply text-2xl font-bold mb-3 mt-6;
  }

  .markdown-content h3 {
    @apply text-xl font-bold mb-2 mt-4;
  }

  .markdown-content p {
    @apply mb-4 leading-relaxed;
  }

  .markdown-content ul,
  .markdown-content ol {
    @apply mb-4 pl-4 space-y-1;
  }

  .markdown-content ul {
    @apply list-disc;
  }

  .markdown-content ol {
    @apply list-decimal;
  }

  .markdown-content a {
    @apply text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 underline;
  }

  .markdown-content code {
    @apply bg-gray-100 dark:bg-gray-800 px-1 py-0.5 rounded font-mono text-sm;
  }

  .markdown-content pre {
    @apply bg-gray-100 dark:bg-gray-800 p-4 rounded-lg mb-4 overflow-x-auto;
  }

  .markdown-content pre code {
    @apply bg-transparent p-0;
  }

  .markdown-content blockquote {
    @apply border-l-4 border-gray-300 dark:border-gray-600 pl-4 italic my-4 text-gray-600 dark:text-gray-300 relative bg-gray-50 dark:bg-gray-800;
  }

  .markdown-content blockquote::before {
    content: '"';
    @apply absolute -left-2 -top-2 text-4xl text-gray-300 dark:text-gray-600 font-serif;
  }

  .markdown-content blockquote::after {
    content: '"';
    @apply absolute -right-2 -bottom-2 text-4xl text-gray-300 dark:text-gray-600 font-serif;
  }

  .markdown-content img {
    @apply rounded-lg my-4;
  }

  .markdown-content table {
    @apply w-full border-collapse mb-4;
  }

  .markdown-content th,
  .markdown-content td {
    @apply border border-gray-300 dark:border-gray-600 px-4 py-2;
  }

  .markdown-content th {
    @apply bg-gray-100 dark:bg-gray-800 font-semibold;
  }

  .markdown-content hr {
    @apply my-8 border-gray-300 dark:border-gray-600;
  }
</style>
